OBJDIRS += client

CLIENT_SRCFILES := \
		src/client/client.cc

CLIENT_OBJFILES := $(CLIENT_SRCFILES)
CLIENT_OBJFILES := $(patsubst src/client/%.cc, $(OBJDIR)/client/%.o, $(CLIENT_OBJFILES))
CLIENT_OBJFILES := $(CLIENT_OBJFILES) $(SHARED_OBJFILES)

$(OBJDIR)/client/libramcloud.a: $(CLIENT_OBJFILES)
	@mkdir -p $(@D)
	$(AR) rcs $@ $^

$(OBJDIR)/client/client: $(OBJDIR)/client/main.o $(OBJDIR)/client/libramcloud.a
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) -o $@ $< -L$(OBJDIR)/client -lramcloud

$(OBJDIR)/client/%.o: $(TOP)/src/client/%.cc
	@mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) -c -o $@ $<

all: $(OBJDIR)/client/client
