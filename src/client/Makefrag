OBJDIRS += client client/client_static client/client_shared \
	client/shared_static client/shared_shared

CLIENT_SRCFILES := \
		src/client/client.c

CLIENT_STATIC_OBJFILES := $(CLIENT_SRCFILES)
CLIENT_STATIC_OBJFILES := $(patsubst src/client/%.c, $(OBJDIR)/client/client_static/%.o, $(CLIENT_STATIC_OBJFILES))
# CAREFUL - this implies that .o file names from src/client and
# SHARED_NET_SRC_FILES cannot collide or all hell will break loose
CLIENT_NET_STATIC_OBJFILES := $(patsubst src/shared/%.c, $(OBJDIR)/client/shared_static/%.o, $(SHARED_NET_SRCFILES))
CLIENT_STATIC_OBJFILES := $(CLIENT_STATIC_OBJFILES) $(CLIENT_NET_STATIC_OBJFILES)

CLIENT_SHARED_OBJFILES := $(CLIENT_SRCFILES)
CLIENT_SHARED_OBJFILES := $(patsubst src/client/%.c, $(OBJDIR)/client/client_shared/%.o, $(CLIENT_SHARED_OBJFILES))
# CAREFUL - this implies that .o file names from src/client and
# SHARED_NET_SRC_FILES cannot collide or all hell will break loose
CLIENT_NET_SHARED_OBJFILES := $(patsubst src/shared/%.c, $(OBJDIR)/client/shared_shared/%.o, $(SHARED_NET_SRCFILES))
CLIENT_SHARED_OBJFILES := $(CLIENT_SHARED_OBJFILES) $(CLIENT_NET_SHARED_OBJFILES)

$(OBJDIR)/client/client_static/%.o: $(TOP)/src/client/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c -o $@ $<

$(OBJDIR)/client/client_shared/%.o: $(TOP)/src/client/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -fPIC -c -o $@ $<

$(OBJDIR)/client/shared_static/%.o: $(TOP)/src/shared/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c -o $@ $<

$(OBJDIR)/client/shared_shared/%.o: $(TOP)/src/shared/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -fPIC -c -o $@ $<

$(OBJDIR)/client/%.o: $(TOP)/src/client/%.c
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -c -o $@ $<

$(OBJDIR)/client/libramcloud.a: $(CLIENT_STATIC_OBJFILES)
	@mkdir -p $(@D)
	$(AR) rcs $@ $^

$(OBJDIR)/client/libramcloud.so: $(CLIENT_SHARED_OBJFILES)
	@mkdir -p $(@D)
	$(CC) -shared -o $@ $^

$(OBJDIR)/client/client: $(OBJDIR)/client/main.o $(OBJDIR)/client/libramcloud.a
	@mkdir -p $(@D)
	$(CC) $(CFLAGS) -o $@ $< -L$(OBJDIR)/client -lramcloud

.PHONY: client client-lib client-lib-static client-lib-shared client-lib-install

client-lib-static: $(OBJDIR)/client/libramcloud.a
client-lib-shared: $(OBJDIR)/client/libramcloud.so
client-lib: client-lib-static client-lib-shared

# TODO(stutsman) need to rethink includes because right now this requires
# -lramcloud -I/usr/local/include/ramcloud
CLIENT_LIB_INSTALL_PREFIX := /usr/local
client-lib-install:
	-mkdir -p $(CLIENT_LIB_INSTALL_PREFIX)/lib
	install -m 644 $(OBJDIR)/client/libramcloud.a $(CLIENT_LIB_INSTALL_PREFIX)/lib
	install -m 644 $(OBJDIR)/client/libramcloud.so $(CLIENT_LIB_INSTALL_PREFIX)/lib
	-mkdir -p $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud
	install -m 644 $(TOP)/src/client/client.h $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud
	-mkdir -p $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud/shared
	install -m 644 $(TOP)/src/shared/net.h $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud/shared
	install -m 644 $(TOP)/src/shared/net_udp.h $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud/shared
	install -m 644 $(TOP)/src/shared/rcrpc.h $(CLIENT_LIB_INSTALL_PREFIX)/include/ramcloud/shared

client: $(OBJDIR)/client/client $(OBJDIR)/client/libramcloud.a $(OBJDIR)/client/libramcloud.so

all: client
